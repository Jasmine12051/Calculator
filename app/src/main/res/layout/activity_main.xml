<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideEast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="347dp"
        android:layout_height="58dp"
        android:gravity="center_vertical|end"
        android:text="@string/defaultTextInput"
        android:textSize="48dp"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        app:layout_constraintTop_toTopOf="@+id/guideNorth" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="0"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="574dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="1"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="370dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="2"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="574dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="3"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="599dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="4"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="5"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="6"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:text="7"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        tools:layout_editor_absoluteY="90dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        android:text="8"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        tools:layout_editor_absoluteY="90dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="62dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        android:text="9"
        android:textSize="30dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        tools:layout_editor_absoluteY="90dp" />

</androidx.constraintlayout.widget.ConstraintLayout>